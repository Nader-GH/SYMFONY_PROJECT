{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
<div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="md:flex">
            <div class="md:w-1/2">
                <img src="{{ product.imageUrl }}" alt="{{ product.name }}" class="w-full h-full object-cover">
            </div>
            
            <div class="md:w-1/2 p-6 md:p-8">
                <div class="flex justify-between items-start">
                    <div>
                        <h1 class="text-2xl md:text-3xl font-bold">{{ product.name }}</h1>
                        <p class="text-gray-600 capitalize">{{ product.category }}</p>
                    </div>
                    <span class="text-2xl font-bold text-blue-900">${{ product.price|number_format(2) }}</span>
                </div>
                
                <div class="my-4 flex items-center space-x-3">
                    {% if product.verified %}
                        <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-sm">Verified</span>
                    {% endif %}
                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-sm">
                        {{ product.condition|replace({'-': ' '}) }}
                    </span>
                </div>
                
                <div class="my-6">
                    <h2 class="text-lg font-semibold mb-3">Description</h2>
                    <p class="text-gray-700">{{ product.description }}</p>
                </div>
                
                <div class="my-6">
                    <h2 class="text-lg font-semibold mb-3">Specifications</h2>
                    <ul class="list-disc list-inside space-y-1 text-gray-700">
                        {% for spec in product.specifications %}
                            <li>{{ spec }}</li>
                        {% endfor %}
                    </ul>
                </div>
                
                <div class="border-t border-gray-200 pt-6">
                    <div class="flex items-center justify-between mb-6">
                        <div class="{% if product.stock > 0 %}text-green-600{% else %}text-red-600{% endif %}">
                            {% if product.stock > 0 %}
                                {{ product.stock }} in stock
                            {% else %}
                                Out of stock
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}