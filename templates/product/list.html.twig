{% extends 'base.html.twig' %}

{% block title %}Products - RxMarketplace{% endblock %}

{% block body %}
<div class="space-y-8">
    <h1 class="text-3xl font-bold">Network Equipment</h1>
    
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for product in products %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img src="{{ product.imageUrl }}" alt="{{ product.name }}" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="font-semibold text-lg mb-2">{{ product.name }}</h3>
                    <div class="flex items-center space-x-2 mb-3">
                        {% if product.verified %}
                            <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Verified</span>
                        {% endif %}
                        <span class="text-sm text-gray-500">{{ product.category }}</span>
                    </div>
                    <p class="text-gray-600 mb-4">{{ product.description|slice(0, 100) }}...</p>
                    <div class="flex justify-between items-center">
                        <span class="font-bold text-blue-900">${{ product.price|number_format(2) }}</span>
                        <a href="{{ path('app_product_show', {id: product.id}) }}" 
                           class="bg-blue-900 text-white px-4 py-2 rounded hover:bg-blue-800">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}