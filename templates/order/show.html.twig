{% extends 'base.html.twig' %}
{% block title %}Order #{{ order.id }}{% endblock %}
{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center fw-bold">Order #{{ order.id }}</h1>
    <div class="mb-3"><strong>Date:</strong> {{ order.createdAt|date('Y-m-d H:i') }}</div>
    <div class="mb-3"><strong>Status:</strong> {{ order.status }}</div>
    <div class="mb-3"><strong>Total:</strong> {{ order.totalPrice|number_format(2) }} €</div>
    <h4 class="mt-4">Items</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            {% for item in order.items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.price|number_format(2) }} €</td>
                    <td>{{ (item.price * item.quantity)|number_format(2) }} €</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('order_history') }}" class="btn btn-secondary">Back to Orders</a>
</div>
{% endblock %}
