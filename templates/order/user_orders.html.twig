{% extends 'base.html.twig' %}
{% block title %}My Orders{% endblock %}
{% block body %}
<h1>My Orders</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Total (â‚¬)</th>
            <th>Status</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.totalPrice|number_format(2, '.', ',') }}</td>
                <td>{{ order.status }}</td>
                <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
            </tr>
        {% else %}
            <tr><td colspan="4">No orders found.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
