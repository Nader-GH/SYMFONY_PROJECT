{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container d-flex flex-column align-items-center justify-content-start" style="min-height: 80vh; padding-top: 4rem;">
    <div class="w-100" style="max-width: 500px;">
        <div class="card shadow border-top border-4 border-primary">
            <div class="card-body p-4">
                <h1 class="text-center mb-4">Register</h1>
                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="mb-3">
                        {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.username) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(registrationForm.locale, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.locale, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.locale) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                    <div class="mb-4 form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                    <button type="submit" class="btn btn-dark w-100">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}